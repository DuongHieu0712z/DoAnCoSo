<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:layout_marginHorizontal="10dp"
    android:layout_margin="5dp"
    android:padding="5dp"
    app:mode="same_level"
    app:dragEdge="right"
    android:background="@color/bg_color"
    android:id="@+id/item_job_detail">
    <include
        android:id="@+id/jobDeltail_funcion"
        layout="@layout/funcion_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="top">
            <ImageView
                android:id="@+id/img_jd_level"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_star_24" />
            <CheckBox
                android:layout_marginLeft="3dp"
                android:id="@+id/chk_status"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:buttonTint="@color/green_02"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >
            <TextView
                android:id="@+id/tv_jd_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Chi Tiết Công Việc"
                android:textColor="@color/text_title_color"
                android:textSize="18sp"
                android:fontFamily="@font/playfair_regular"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tv_jd_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả chi tiết công việc"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/playfair_regular"
                    />
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginRight="5dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:text="Dự kiến :"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/tv_jd_estimated_time"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="Value"
                        android:textSize="14sp"
                        android:textColor="@color/orange"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="phút"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:text="Thực tế :"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="value"
                        android:textColor="@color/orange"
                        android:id="@+id/tv_jd_actual_time"
                        android:textSize="14sp"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="phút"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sub_bg_color"
                android:layout_marginRight="37dp"
                />
        </LinearLayout>
    </LinearLayout>


</com.chauthai.swipereveallayout.SwipeRevealLayout>
