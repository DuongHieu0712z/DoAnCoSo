<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:layout_marginHorizontal="10dp"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@drawable/bg_job"
    android:id="@+id/item_job_detail">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="top">
        <CheckBox
            android:layout_marginLeft="3dp"
            android:id="@+id/chk_status"
            android:button="@drawable/custom_checkbox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/img_jd_level"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_gravity="top"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="9"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        >
        <TextView
            android:id="@+id/tv_jd_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Chi Tiết Công Việc"
            android:textColor="@color/blue"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_jd_description"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Mô tả chi tiết công việc"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_jd_estimated_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian hoàn thành dự kiến"
                    android:textSize="12sp"
                    android:textColor="@color/orange"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian hoàn thành thực tế"
                    android:textColor="@color/orange"
                    android:id="@+id/tv_jd_actual_time"
                    android:textSize="12sp"
                    />

            </LinearLayout>
        </LinearLayout>

        <SeekBar
            android:id="@+id/sb_jd_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/orange"
            android:thumbTint="@color/orange"
            />
    </LinearLayout>
</LinearLayout>
