<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_topic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.8"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_level"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_star_24" />

                <TextView
                    android:id="@+id/tv_job_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingTop="5dp"
                    android:gravity="center"
                    android:text="Tên Công Việc"
                    android:textColor="@color/text_title_color"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                >
                <CheckBox
                    android:layout_weight="1.4"
                    android:id="@+id/chk_finish"
                    android:layout_width="0dp"
                    android:layout_marginLeft="2dp"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_job_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="8.8"
                    android:layout_gravity="end"
                    android:padding="5dp"
                    android:text="Mô tả công việc"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                >
                <ProgressBar
                    android:id="@+id/prg_progress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:indeterminateOnly="false"
                    android:indeterminateTint="@color/green"
                    android:max="100"
                    android:min="0"
                    android:progress="60"
                    android:progressDrawable="@drawable/prg_circle" />
                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="100%"
                    android:textColor="@color/green_03"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_Status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="abc"
                    android:textColor="@color/green_01"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_remainning_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/testdate"
                    android:textColor="@color/orange"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/sub_bg_color" />
</LinearLayout>