<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_color"
    android:padding="5dp"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/tv_clock_notification"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/ln_count_up"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toEndOf="@+id/tv_clock_notification"
        android:layout_toStartOf="@+id/img_finish"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:textColor="@color/text_title_color"
            />
        <TextView
            android:id="@+id/tv_notification_descripsion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginStart="8dp"
            android:textSize="10sp"
            android:textColor="@color/text_title_color"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/img_pause_or_resume"
        android:padding="10dp"
        android:src="@drawable/ic_done" />
    <ImageView
        android:id="@+id/img_pause_or_resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_toStartOf="@+id/img_cancel_notification"
        android:src="@drawable/ic_pause"/>

    <ImageView
        android:id="@+id/img_cancel_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_cancel"/>

</RelativeLayout>